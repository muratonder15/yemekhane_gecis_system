@using Yemekhane_Gecis_Sistemi.Models
@model kart_bilgileri
@{
    ViewBag.Title = "Kisi Bilgi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("KisiBilgi", "Home", FormMethod.Post))
{
    <div class="form-group">
       
            @Html.TextBoxFor(x => x.kullanicilar.tc,new { @class="form-control"})<br />
            <input type="submit" class="btn btn-success" value="bul" />
        
        
    </div>
}
@if (Model != null)
{
    using (Html.BeginForm("KisiBilgi", "Home", FormMethod.Post))
    {
<table class="table table-hover">
    <thead>
        <tr>
            <th>id</th>
            <td>@Model.kullanici_id</td>
        </tr>
        <tr>
            <th>ad</th>
            <td>@Model.kullanicilar.ad</td>
        </tr>
        <tr>
            <th>soyad</th>
            <td>@Model.kullanicilar.soyad</td>
        </tr>
        <tr>
            <th>bakiye</th>
            <td>@Model.bakiye</td>
        </tr>
        
    </thead>

</table>
@Html.TextBoxFor(x => x.kullanicilar.tc, new { @class = "form-control col md-6" })
        <br />@Html.LabelFor(x => x.bakiye)
        <div class="form-group">
           
            @Html.TextBoxFor(x => x.bakiye, new { @class = "form-control col md-6" })
            <br />
            <input type="submit" class="btn btn-success" value="bakiye yükle" />
        </div>
           
        
    }
}