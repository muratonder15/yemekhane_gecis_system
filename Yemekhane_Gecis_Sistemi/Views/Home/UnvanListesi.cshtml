@using Yemekhane_Gecis_Sistemi.Models
@model List<unvanlar>
@{
    ViewBag.Title = "UnvanListesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Unvan Id</th>
            <th>Unvan Adı</th>
            <th>Unvan Güncelle</th>
        </tr>

        @foreach (var a in Model)
        {
            <tr>
                <td>@a.unvan_id</td>
                <td>@a.unvan_adi</td>
                <td><a href="/Home/UnvanGuncelle/@a.unvan_id">Güncelle</a></td>
            </tr>
        }
    </thead>
</table>
<br />
@Html.ActionLink("Unvan Ekle", "UnvanEkle", "Home", new { @class = "btn btn-primary" })

