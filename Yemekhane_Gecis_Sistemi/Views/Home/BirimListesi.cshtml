@using Yemekhane_Gecis_Sistemi.Models
@model List<birimler>
@{
    ViewBag.Title = "BirimListesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table table-hover">
    <thead>
        <tr>
            <th>Birim Id</th>
            <th>Birim Adı</th>
            <th>Birim Güncelle</th>
        </tr>

        @foreach (var a in Model)
        {
    <tr>
        <td>@a.birim_id</td>
        <td>@a.birim_adi</td>
        <td><a href="/Home/BirimGuncelle/@a.birim_id">Güncelle</a></td>
    </tr>
        }                
    </thead>
</table>
<br />
@Html.ActionLink("Birim Ekle", "BirimEkle", "Home", new { @class = "btn btn-primary" })