@using Yemekhane_Gecis_Sistemi.Models
@model birimler
@{
    ViewBag.Title = "BirimGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("BirimGuncelle", "Home", FormMethod.Post))
{

    <div class="form-group">
        @if (ViewData["mesaj"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["mesaj"]
                <a href="/Home/BirimListesi">Geri Dön</a>
            </div>
        }
        <div>
            @Html.LabelFor(x => x.birim_id)
            @Html.TextBoxFor(x => x.birim_id, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        <div>
            @Html.LabelFor(x => x.birim_adi)
            @Html.TextBoxFor(x => x.birim_adi, new { @class = "form-control" })
        </div>
    </div>

    <input type="submit" value="Birim Güncelle" class="btn btn-success" />

}

