@using Yemekhane_Gecis_Sistemi.Models
@model List<duyurular>
@{
    ViewBag.Title = "Duyuruları Görüntüleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <title> Duyuru Sayfası</title>
     
</head>

<body>
    <div class="col-md-12">
        <div class="chat-panel panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                <ul class="chat">
                    @foreach (var a in Model) { 
                    <li class="left clearfix">
                        <span class="chat-img pull-left">
                            <img src="http://placehold.it/50/55C1E7/fff" alt="User Avatar" class="img-circle">
                        </span>
                        <div class="chat-body clearfix">
                            <div class="header">
                                <strong class="primary-font">@a.kullanicilar.ad @a.kullanicilar.soyad</strong>
                                <small class="pull-right text-muted">
                                    <i class="fa fa-clock-o fa-fw"></i> @a.kayit_tarihi
                                </small>
                            </div>
                            <p>
                                <b>Konu:</b> @a.konu
                            </p>
                            <p>
                                <b>Mesaj:</b> @a.mesaj
                            </p>
                        </div>
                    </li>
                    }


                </ul>
            </div>
            <!-- /.panel-body -->
            <!-- /.panel-footer -->
        </div>
        
    </div>
</body>

</html>

